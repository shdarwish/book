<div class="bg">
  <br>
  <br>
<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <h3>Edit Profile</h3>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :avatar %>
          <br>
          <%= render 'shared/avatar', user: @user %>
          <br>
          <br>
          <%= f.file_field :avatar %>
        </div>
      
        <div class="form-group">
          <%= f.label :username %>
          <%= f.text_field :username, placeholder: 'Username', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: 'Full Name', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :about %>
          <%= f.text_area :about, placeholder: 'About', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :location %>
          <%= f.text_field :location, placeholder: 'Location', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, placeholder: 'Phone Number', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :dob %>
          <%= f.text_field :dob, placeholder: 'Date of Birth', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :sex %><br>
          <%= f.select :sex, options_for_seasons, class: 'form-control', prompt: 'Select One' %>
        </div>
        <div class="form-group">
          <%= f.label :genre %>
          <%= render partial: 'genre_check', class: 'appformcontrol form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :edit_your_notification_preferance %>
          <%= link_to 'edit notification', prefer_path(@user.prefer.id) %>
        </div>
        <div class="form-group">
          <%= f.label :lets_recommend_a_genre_for_you %>
          <%= link_to 'Get a recommended genre', new_quiz_path %>
        </div>


        <div class="actions">
          <%= submit_tag 'Update', class: 'activity1' %>
        </div>
      <% end %>
    </div>
  </div>
</br></br>
</div>
</div>